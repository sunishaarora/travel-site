@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}


@if (Model != null && Model.PageItem != null)
{
    <div class="contact wow fadeInUp">
        <div class="container">
            <div class="section-header text-center">
                <p>@Html.Sitecore().Field("Title")</p>
                <h2>@Html.Sitecore().Field("Sub_Title")</h2>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <div class="contact-info">
                        <div class="contact-item">
                            <i class="flaticon-address"></i>
                            <div class="contact-text">
                                <h2>Location</h2>
                                <p>@Html.Sitecore().Field("Address")</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="flaticon-call"></i>
                            <div class="contact-text">
                                <h2>Phone</h2>
                                <p>@Html.Sitecore().Field("Phone")</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="flaticon-send-mail"></i>
                            <div class="contact-text">
                                <h2>Email</h2>
                                <p>@Html.Sitecore().Field("Email")</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="control-group">
                                <input type="text" class="form-control" id="name" placeholder=@Html.Sitecore().Field("Name") />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="email" class="form-control" id="email" placeholder=@Html.Sitecore().Field("Email_Add") />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="text" class="form-control" id="subject" placeholder=@Html.Sitecore().Field("Subject") />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <textarea class="form-control" id="message" placeholder=@Html.Sitecore().Field("Message")></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                                <button class="btn-old" type="submit" id="sendMessageButton">@Html.Sitecore().Field("Submit")</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}