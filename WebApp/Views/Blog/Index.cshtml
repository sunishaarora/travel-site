@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}

@if (Model != null && Model.Item != null)
{
    <div class="single-content wow fadeInUp">
        <div> @Html.Sitecore().Field("Image", Model.Item)</div>
        <h2> @Html.Sitecore().Field("Sub_title", Model.Item)</h2>
        <div> @Html.Sitecore().Field("Blog_text", Model.Item)</div>
    </div>

    <div class="single-bio wow fadeInUp">
        <div class="single-bio-img">
            @Html.Sitecore().Field("Author_Image", Model.Item)
        </div>
        <div class="single-bio-text">
            <h3> @Html.Sitecore().Field("Author_Name", Model.Item)</h3>
            <div> @Html.Sitecore().Field("Author_Description", Model.Item)</div>
        </div>
    </div>
}
