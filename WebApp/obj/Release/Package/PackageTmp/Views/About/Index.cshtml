@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation;
@using WebApp.Models
@model AboutViewModel

@if (Model != null && Model.Item != null)
{
    <div class="about wow fadeIn@(Html.Sitecore().Field("Fade", Model.Item).ToString())" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">

                @if (@Html.Sitecore().Field("ImagePosition", Model.Item).ToString().Equals("Left"))
                {
                    <div class="col-lg-5 col-md-6">
                        <div class="about-img">
                            @Html.Sitecore().Field("Image", Model.Item)
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-6">
                        <div class="section-header text-left">
                            <p>@Html.Sitecore().Field("Title", Model.Item)</p>
                            <h2>@Html.Sitecore().Field("Sub_Title", Model.Item)</h2>
                        </div>
                        <div class="about-text">
                            @Html.Sitecore().Field("Description", Model.Item)
                            @if (@Html.Sitecore().Field("Call_To_Action") != null)
                            {
                                @Html.Sitecore().Field("Call_To_Action", new { @class = "btn" })
                            }
                        </div>
                    </div>
                }
                else if (@Html.Sitecore().Field("ImagePosition", Model.Item).ToString().Equals("Right"))
                {
                    <div class="col-lg-7 col-md-6">
                        <div class="section-header text-left">
                            <p>@Html.Sitecore().Field("Title", Model.Item)</p>
                            <h2>@Html.Sitecore().Field("Sub_Title", Model.Item)</h2>
                        </div>
                        <div class="about-text">
                            @Html.Sitecore().Field("Description", Model.Item)
                            @Html.Sitecore().Field("Call_To_Action", new { @class = "btn" })
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="about-img">
                            @Html.Sitecore().Field("Image", Model.Item)
                        </div>
                    </div>
                }
                else if (@Html.Sitecore().Field("ImagePosition", Model.Item).ToString().Equals("No image"))
                {
                    <div class="col-lg-12 col-md-12">
                        <div class="section-header text-left">
                            <p>@Html.Sitecore().Field("Title", Model.Item)</p>
                            <h2>@Html.Sitecore().Field("Sub_Title", Model.Item)</h2>
                        </div>
                        <div class="about-text">
                            @Html.Sitecore().Field("Description", Model.Item)
                            @Html.Sitecore().Field("Call_To_Action", new { @class = "btn" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

